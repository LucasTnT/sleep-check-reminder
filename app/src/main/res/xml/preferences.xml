<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android" >

	<PreferenceCategory
		android:key="timing"
		android:title="Reminder status">
		
		<CheckBoxPreference
            android:key="notification_on"
            android:title="Global status"
            android:summaryOff="Inactive"
            android:summaryOn="Active" />
		
		<TimePickerPreference
			android:key="start_at_timepicker"
			android:title="Activation time"
			android:defaultValue="0:00" />
		
		<TimePickerPreference
			android:key="finish_at_timepicker"
			android:title="Calm down time"
			android:defaultValue="0:00" />
	</PreferenceCategory>
			
	<PreferenceCategory			
		android:key="periodicity"
		android:title="Periodicity">

		<ListPreference
            android:key="repeat_mode"
            android:title="Periodicity mode"
            android:entries="@array/repeat_mode_entries"
            android:entryValues="@array/repeat_mode_entry_values"
            android:dialogTitle="Periodicity mode"
            android:defaultValue="0" />

		<com.hlidskialf.android.preference.SeekBarPreference
        android:key="times_per_day_slider"
        android:title="Amount of notifications"
        android:dialogMessage="Amount of random length periods"
        android:defaultValue="5"
        android:text=" times"
        min="1"
        android:max="30" />
               
		<com.hlidskialf.android.preference.SeekBarPreference 
			android:key="period_length_slider"
	        android:title="Period length"
	        android:dialogMessage="Fixed length of period in minutes"
	        android:defaultValue="45"
	        android:text=" minutes"
	        min="1"
	        android:max="120" />
                
	</PreferenceCategory>
	
	<PreferenceCategory
		android:key="notification"
		android:title="Notification">

        <CheckBoxPreference
            android:key="vibration_on"
            android:title="Vibration"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled" />

		<ListPreference
            android:key="sound_source"
            android:title="Sound source"
            android:entries="@array/sound_source_entries"
            android:entryValues="@array/sound_source_entry_values"
            android:dialogTitle="Notification mode"
            android:defaultValue="0" />

        <Preference
            android:key="system_default_sound"
            android:title="Selected sound"
            android:summary="Default"/>

        <RingtonePreference
            android:key="alarm_sound"
            android:title="Selected sound"
            android:ringtoneType="alarm"
            android:showSilent="false"
            android:showDefault="false"
            android:summary="" />

        <ListPreference
            android:key="in_built_sound"
            android:title="Selected sound"
            android:entries="@array/in_built_sound_entries"
            android:entryValues="@array/in_built_sound_entry_values"
            android:dialogTitle="Background sound" />

        <Preference
            android:key="custom_sound_picker"
            android:title="Selected sound" />

		<com.hlidskialf.android.preference.SeekBarPreference 
			android:key="volume_slider"
	        android:title="Volume"
	        android:dialogMessage="Volume"
	        android:defaultValue="100"
	        android:text="%"
	        min="1"
	        android:max="100" />

        <CheckBoxPreference
            android:key="repeat_sound_on"
            android:title="Repeat sound"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled" />

        <CheckBoxPreference
            android:key="fade_in_out_on"
            android:title="Fade in/out"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled" />

        <com.hlidskialf.android.preference.SeekBarPreference
            android:key="maximum_play_time"
            android:title="Maximum play time"
            android:dialogMessage="Maximum play time"
            android:defaultValue="30"
            android:text=" seconds"
            min="1"
            android:max="600" />

    </PreferenceCategory>
  
</PreferenceScreen>
